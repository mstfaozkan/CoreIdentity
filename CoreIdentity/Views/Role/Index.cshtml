@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary text-white p-1">
    Role List
</div>

@if (TempData["message"] != null)
{
    <div class="alert alert-success">
        @TempData["message"]
    </div>
}
<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-bordered table-striped m-1 p-1">
    <tr>
        <th>Role Id</th>
        <th>Role Name</th>
       
        <th></th>

    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" class="text-white">No Roles</td>
        </tr>
    }
    else
    {
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                
                <td>
                    <form asp-route-id="@role.Id" asp-action="Delete" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                    </form>
                </td>

            </tr>
        }
    }
</table>

<a asp-action="Create" class="btn btn-success">Create Role</a>

